{
  // SonarLint Configuration
  // Copy this file to settings.json and replace placeholders
  "sonarlint.connectedMode.servers": [
    {
      "serverId": "sonarcloud",
      "serverUrl": "https://sonarcloud.io",
      "token": "${env:SONAR_TOKEN}",
      "organizationKey": "zhangisaac"
      // Replace 'your-org-key' with your actual SonarCloud organization key
      // Set SONAR_TOKEN environment variable with your SonarCloud token
    }
  ],
  
  // SonarLint project binding
  "sonarlint.connectedMode.project": {
    "projectKey": "vue-ui-workflow-bpmn"
  },

  // ESLint Configuration
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "eslint.workingDirectories": ["."],

  // TypeScript Configuration
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Editor Configuration
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File Associations
  "files.associations": {
    "*.vue": "vue"
  },

  // Exclude patterns for file watcher
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.git/**": true
  }
}

